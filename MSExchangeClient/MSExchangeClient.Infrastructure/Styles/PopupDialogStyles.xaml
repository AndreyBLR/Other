<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >
    <Style x:Key="popupDialogBaseStyle" TargetType="{x:Type Window}">
        <Setter Property="SizeToContent" Value="WidthAndHeight" />
        <Setter Property="MinWidth" Value="100" />
        <Setter Property="MinHeight" Value="30" />
    </Style>

    <Style x:Key="startupDialogStyle" TargetType="{x:Type Window}" BasedOn="{StaticResource popupDialogBaseStyle}">
        <Setter Property="ResizeMode" Value="NoResize" />
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="Opacity" Value="50" />
        <Setter Property="AllowsTransparency" Value="True" />
    </Style>

    <Style x:Key="popupDialogStyle" TargetType="{x:Type Window}" BasedOn="{StaticResource popupDialogBaseStyle}">
        
    </Style>
</ResourceDictionary>