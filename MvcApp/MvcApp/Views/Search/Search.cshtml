@using MvcApp.Models
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>


@using (Html.BeginForm("Search", "Search"))
{
    <table align="center">
        <tr>
            <td>
                Name:
            </td>
            <td>
                @Html.TextBox("name", null, new { style = "width:244px;" })
            </td>
        </tr>
        <tr>
            <td>
                Genre:
            </td>
            <td>
                @Html.ListBox("genre", new MultiSelectList((IEnumerable<GenreModel>)ViewData["Genres"], "Id", "Name", ((IEnumerable<GenreModel>)ViewData["Genres"]).Select(x => new SelectListItem()
                                                                                                                                                                        {
                                                                                                                                                                            Selected = true,
                                                                                                                                                                            Text = x.Name,
                                                                                                                                                                            Value = x.Id.ToString()
                                                                                                                                                                        }).ToList()
                                                                          ), new { style="width:250px;"}
                                )
                                
            </td>
        </tr>
        <tr>
            <td colspan="2" align="center"><input type="submit" value="Search" height="10" /></td>
        </tr>
    </table>
}